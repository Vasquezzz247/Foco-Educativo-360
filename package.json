{
  "name": "foco-educativo-360-fullstack",
  "version": "1.0.0",
  "description": "Plataforma educativa con neurociencia - Frontend React + Backend Express API",
  "private": true,
  
  "scripts": {
    "install:all": "npm install && npm run install:frontend && npm run install:backend",
    "install:frontend": "npm install --prefix frontend",
    "install:backend": "npm install --prefix backend",
    "dev": "concurrently --names \"FRONTEND,BACKEND\" -c \"blue,green\" \"npm run dev:frontend\" \"npm run dev:backend\"",
    "dev:frontend": "npm run dev --prefix frontend",
    "dev:backend": "npm run dev --prefix backend",
    "build": "npm run build:frontend && npm run build:backend",
    "build:frontend": "npm run build --prefix frontend",
    "build:backend": "npm run build --prefix backend",
    "start": "npm run start:backend",
    "start:backend": "npm start --prefix backend",
    "preview": "npm run preview --prefix frontend",
    "test": "npm run test:frontend && npm run test:backend",
    "test:frontend": "npm run test --prefix frontend",
    "test:backend": "npm run test --prefix backend",
    "lint": "npm run lint:frontend && npm run lint:backend",
    "lint:frontend": "npm run lint --prefix frontend",
    "lint:backend": "npm run lint --prefix backend",
    "clean": "npm run clean:frontend && npm run clean:backend",
    "clean:frontend": "rm -rf frontend/node_modules frontend/dist frontend/.parcel-cache",
    "clean:backend": "rm -rf backend/node_modules backend/dist"
  },
  "devDependencies": {
    "concurrently": "^8.2.2"
  },
  "keywords": [
    "educacion",
    "neurociencia",
    "react",
    "express",
    "postgresql",
    "jwt"
  ],
  "author": "Grupo Foco Educativo 360",
  "license": "MIT",
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  }
}
