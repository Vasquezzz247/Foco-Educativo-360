{
    "info": {
        "name": "Express JWT PG API",
        "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
    },
    "item": [
        {
            "name": "Auth",
            "item": [
                {
                    "name": "Register",
                    "request": {
                        "method": "POST",
                        "header": [
                            {
                                "key": "Content-Type",
                                "value": "application/json"
                            }
                        ],
                        "body": {
                            "mode": "raw",
                            "raw": "{\n  \"name\": \"chepito\",\n  \"email\": \"chepito@mail.com\",\n  \"password\": \"123456\"\n}"
                        },
                        "url": {
                            "raw": "http://localhost:3000/auth/register",
                            "protocol": "http",
                            "host": [
                                "localhost"
                            ],
                            "port": "3000",
                            "path": [
                                "auth",
                                "register"
                            ]
                        }
                    }
                },
                {
                    "name": "Login",
                    "request": {
                        "method": "POST",
                        "header": [
                            {
                                "key": "Content-Type",
                                "value": "application/json"
                            }
                        ],
                        "body": {
                            "mode": "raw",
                            "raw": "{\n  \"email\": \"chepito@mail.com\",\n  \"password\": \"123456\"\n}"
                        },
                        "url": {
                            "raw": "http://localhost:3000/auth/login",
                            "protocol": "http",
                            "host": [
                                "localhost"
                            ],
                            "port": "3000",
                            "path": [
                                "auth",
                                "login"
                            ]
                        }
                    },
                    "event": [
                        {
                            "listen": "test",
                            "script": {
                                "exec": [
                                    "const json = pm.response.json();",
                                    "if (json.token) {",
                                    "  pm.environment.set(\"TOKEN\", json.token);",
                                    "}"
                                ]
                            }
                        }
                    ]
                }
            ]
        },
        {
            "name": "Users",
            "item": [
                {
                    "name": "List users",
                    "request": {
                        "method": "GET",
                        "header": [
                            {
                                "key": "Authorization",
                                "value": "Bearer {{TOKEN}}"
                            }
                        ],
                        "url": {
                            "raw": "http://localhost:3000/users",
                            "protocol": "http",
                            "host": [
                                "localhost"
                            ],
                            "port": "3000",
                            "path": [
                                "users"
                            ]
                        }
                    }
                },
                {
                    "name": "Get user by id",
                    "request": {
                        "method": "GET",
                        "header": [
                            {
                                "key": "Authorization",
                                "value": "Bearer {{TOKEN}}"
                            }
                        ],
                        "url": {
                            "raw": "http://localhost:3000/users/{{USER_ID}}",
                            "protocol": "http",
                            "host": [
                                "localhost"
                            ],
                            "port": "3000",
                            "path": [
                                "users",
                                "{{USER_ID}}"
                            ]
                        }
                    }
                }
            ]
        }
    ]
}